<% if (allrecs.length > 0) {%>

  <table border ='1'>
  <tr>
  <th>Author ID</th>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Details</th>
  <th>Edit</th>
  <th>Delete</th>
  </tr>
  <% allrecs.forEach((recref, index) => { %>
  <tr>
  <td><%= recref.author_id %></td>
  <td><%= recref.first_name %></td>
  <td><%= recref.last_name %></td>
  <td><a href='/author/<%= recref.author_id %>/show'>
  Details</a></td>
  <td><a href='/author/<%= recref.author_id
  %>/edit'>Edit</a></td>
  <td><a href='/author/<%= recref.author_id %>/delete'
  onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
  </tr>
  <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>

  <p> <a href='/author/addrecord'>Add New</a> </p>
