<% if (allrecs.length > 0) {%>

    <table border='1'>
    <tr>
    <th>Address ID</th>
    <th>Street Number</th>
    <th>Street Name</th>
    <th>City</th>
    <th>State</th>
    <th>Postal Code</th>
    <th>Country</th>
    <th>Customer</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
    <td><%= recref.address_id %></td>
    <td><%= recref.street_number %></td>
    <td><%= recref.street_name %></td>
    <td><%= recref.city %></td>
    <td><%= recref.state %></td>
    <td><%= recref.postal_code %></td>
    <td><%= recref.country_id %></td>
    <td><%= recref.customer_id %></td>

    <td><a href='/address/<%= recref.address_id %>/show'>
    Details</a></td>
    <td><a href='/address/<%= recref.address_id
    %>/edit'>Edit</a></td>
    <td><a href='/address/<%= recref.address_id %>/delete'
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>No Records Available</p>
    <% } %>
  
    <p><a href='/address/addrecord'>Add New</a></p>