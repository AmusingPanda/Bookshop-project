<% if (allrecs.length > 0) {%>

    <table border ='1'>
    <tr>
    <th>Order line ID</th>
    <th>Order ID</th>
    <th>Book ID </th>
    <th>Quantity</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
    <td><%= recref.order_line_id %></td>
    <td><%= recref.order_id %></td>
    <td><%= recref.book_id %></td>
    <td><%= recref.quantity %></td>
    <td><a href='/orderline/<%= recref.order_line_id %>/show'>Details</a></td>
    <td><a href='/orderline/<%= recref.order_line_id %>/edit'>Edit</a></td>
    <td><a href='/orderline/<%= recref.order_line_id %>/delete'
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>No records available</p>
    <% } %>
    <p><a href='/orderline/addrecord'>Add New</a></p>