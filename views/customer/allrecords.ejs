<% if (allrecs.length > 0) {%>

    <table border ='1'>
    <tr>
    <th>Customer ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Username</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
    <td><%= recref.customer_id %></td>
    <td><%= recref.first_name %></td>
    <td><%= recref.last_name %></td>
    <td><%= recref.email %></td>
    <td><%= recref.username %></td>
    <td><a href='/customer/<%= recref.customer_id %>/show'>
    Details</a></td>
    <td><a href='/customer/<%= recref.customer_id %>/edit'>Edit</a></td>
    <td><a href='/customer/<%= recref.customer_id %>/delete'
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>No Records Available</p>
    <% } %>
  
    <p> <a href='/customer/addrecord'>Add New Record</a></p>
  