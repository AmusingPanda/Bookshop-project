<!DOCTYPE html>
<html>
<head>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #C1EFFF;
    margin: 0;
    padding: 0;
  }

  #books {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
  }

  #books td, #books th {
    border: 1px solid #ddd;
    padding: 8px;
  }

  #books tr:nth-child(even){background-color: #f2f2f2;}

  #books tr:hover {background-color: #e0e0e0;}

  #books th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #3498DB; /* Updated color */
    color: white;
  }

  img {
    max-width: 50px;
    max-height: 50px;
  }

  a {
    text-decoration: none;
    color: #337ab7;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
</head>
<body>
  <% if (allrecs.length > 0) { %>
    <table id="books">
      <tr>
        <th>Book ID</th>
        <th>Title</th>
        <th>Image</th>
        <th>Published</th>
        <th>Book Language</th>
        <th>Publisher</th>
        <th>Price</th>
        <th>ISBN</th>
        <th>Author Name</th>
        <th>Details</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr>
          <td><%= recref.book_id %></td>
          <td><%= recref.title %></td>
          <td><img src="<%= recref.bookimage %>" alt="Book Image"></td>
          <td><%= recref.publication_date.toDateString() %></td>
          <td><%= recref.language_name %></td>
          <td><%= recref.publisher_name %></td>
          <td>$<%= recref.price %></td>
          <td><%= recref.isbn %></td>
          <td><%= recref.first_name %> <%= recref.last_name %></td>
          <td><a href="/books/<%= recref.book_id %>/show">Details</a></td>
          <td><a href="/books/<%= recref.book_id %>/edit">Edit</a></td>
          <td>
            <a href="/books/<%= recref.book_id %>/delete"
              onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
          </td>
        </tr>
      <% }); %>
    </table>
  <% } else { %>
    <p>No Records Available</p>
  <% } %>
</body>
</html>
