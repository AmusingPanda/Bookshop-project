<% if (allrecs.length > 0) {%>

  <table border ='1'>
  <tr>
  <th>Review ID</th>
  <th>Customer ID</th>
  <th>Book ID</th>
  <th>Rating</th>
  <th>Review Text</th>
  <th>Details</th>
  <th>Edit</th>
  <th>Delete</th>
  </tr>
  <% allrecs.forEach((recref, index) => { %>
  <tr>
  <td><%= recref.review_id %></td>
  <td><%= recref.customer_id %></td>
  <td><%= recref.book_id %></td>
  <td><%= recref.rating %></td>
  <td><%= recref.review_text %></td>
  <td><a href='/review/<%= recref.review_id %>/show'>
  Details</a></td>
  <td><a href='/review/<%= recref.review_id
  %>/edit'>Edit</a></td>
  <td><a href='/review/<%= recref.review_id %>/delete'
  onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
  </tr>
  <% }); %>
  </table>
  <% } else { %>
  <p>No Records Available</p>
  <% } %>

  <p> <a href='/review/addrecord'>Add New</a> </p>
