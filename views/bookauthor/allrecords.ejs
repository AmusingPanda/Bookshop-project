<% if (allrecs.length > 0) {%>

    <table border ='1'>
    <tr>
    <th>Book ID</th>
    <th>Author ID</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
    <td><%= recref.book_id %></td>
    <td><%= recref.author_id %></td>
    <td><a href='/bookauthor/<%= recref.book_id %>/show'>
    Details</a></td>
    <td><a href='/bookauthor/<%= recref.book_id
    %>/edit'>Edit</a></td>
    <td><a href='/bookauthor/<%= recref.book_id %>/delete'
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>Not Records Available</p>
    <% } %>
  
    <p> <a href='/bookauthor/addrecord'>Add New</a> </p>
  