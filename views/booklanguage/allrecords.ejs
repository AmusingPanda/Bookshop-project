<% if (allrecs.length > 0) {%>

    <table border ='1'>
    <tr>
    <th>Language ID</th>
    <th>Language Name</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
    <td><%= recref.language_id %></td>
    <td><%= recref.language_name %></td>
    <td><a href='/booklanguage/<%= recref.language_id %>/show'>
    Details</a></td>
    <td><a href='/booklanguage/<%= recref.language_id
    %>/edit'>Edit</a></td>
    <td><a href='/booklanguage/<%= recref.language_id %>/delete'
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>Not Records Available</p>
    <% } %>
  
    <p> <a href='/booklanguage/addrecord'>Add New</a> </p>
  