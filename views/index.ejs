<p>Welcome to the Bookshop of Alexandria </p>

<table width="100%"><tr>
  <td width="80%">
    <% if (allrecs.length > 0) {%>
        <% allrecs.forEach((recref, index) => { %>
          <product>
            <table> 
                <tr><td><%= recref.book_id %></td><td><%= recref.title %></td></tr>
                <tr><td colspan="2"><%= recref.bookimage %></td></tr>
                <tr><td><%= recref.publication_date.toDateString() %></td>	<td><%= recref.language_id %></td></tr>
                <tr><td><%= recref.publisher_id %></td><td><%= recref.price %></td></tr>
                <tr><td><%= recref.isbn %></td>
                <td><a href='/book/<%= recref.book_id %>/show'>Details</a></td></tr>
            </table>
          </product>
      <% }); %>
    <% } %>
  </td>

  <td width="20%">
    <% if (promos.length > 0) {%>
      <% promos.forEach((recref, index) => { %>
        Promotions
        <img src="/images/<%= recref.promoimage %>" height="200">
      <% }); %>
    <% } %>
  </td>

</tr></table>


