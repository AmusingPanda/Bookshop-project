<% if (allrecs.length > 0) {%>

  <table border ='1'>
  <tr>
  <th>Publisher ID</th>
  <th>Publisher Name</th>
  <th>Details</th>
  <th>Edit</th>
  <th>Delete</th>
  </tr>
  <% allrecs.forEach((recref, index) => { %>
  <tr>
  <td><%= recref.publisher_id %></td>
  <td><%= recref.publisher_name %></td>
  <td><a href='/publisher/<%= recref.publisher_id %>/show'>
  Details</a></td>
  <td><a href='/publisher/<%= recref.publisher_id
  %>/edit'>Edit</a></td>
  <td><a href='/publisher/<%= recref.publisher_id %>/delete'
  onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
  </tr>
  <% }); %>
  </table>
  <% } else { %>
  <p>Not Records Available</p>
  <% } %>

  <p> <a href='/publisher/addrecord'>Add New</a> </p>
